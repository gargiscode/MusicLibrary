<Page
    x:Class="MusicLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:model="using:MusicLibrary.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0">
            <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    Click="HamburgerButton_Click"   
                    />
        </RelativePanel>

        <SplitView Grid.Row="1"
                   Name="leftSplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="45"
                   OpenPaneLength="200"
                   >
            <SplitView.Pane>
                <ListView Name="MenuItemsListView"
                           IsItemClickEnabled="True"
                           ItemClick="MenuItemsListView_ItemClick"  
            />
            </SplitView.Pane>
            <SplitView.Content>
                <ListView Name="AllSongsListView" 
                          IsItemClickEnabled="True"
                          ItemClick="AllSongsListView_ItemClick"
                          ItemsSource="{x:Bind SongLines}"
                          >
                    <MediaElement Name ="MyMediaElement" AutoPlay="True"/>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:EachSongLine">
                            <RelativePanel>

                                <TextBlock Name="SongTrack"
                                   Text="{x:Bind SongTitle}"
                                   Width="800"
                                   FontSize="20" 
                                   RelativePanel.AlignLeftWithPanel="True"
                                            
                                />
                               
                                <Button Name ="PlayButton"
                                    RelativePanel.RightOf="SongTrack"
                                    Content="&#xE102;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="PlayButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"
                                 />
                                <Button Name ="AddButton"
                                    RelativePanel.RightOf="PlayButton"
                                    Content="&#xE109;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="AddButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"    
                                />

                            </RelativePanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>
