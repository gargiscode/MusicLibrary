<Page
    x:Class="MusicLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:model="using:MusicLibrary.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Grid.Row="0">
            <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    Content="&#xE700;"
                    FontFamily="Segoe MDL2 Assets"
                    Click="HamburgerButton_Click"   
                    />
        </RelativePanel>

        <SplitView Grid.Row="1"
                   Name="leftSplitView"
                   DisplayMode="CompactInline"
                   CompactPaneLength="200"
                   OpenPaneLength="200"
                   >
            <SplitView.Pane>
                <ListView Name="MenuItemsListView"
                           IsItemClickEnabled="True"
                >
                    <StackPanel>
                        <Button Name="AllSongsHeader"
                                   FontSize="30"
                                   Height="60"
                                   Width="180"
                                   Content="All Songs"
                                   Click="AllSongsHeader_Click" 
                        />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Name ="PlayListHeader"
                                   FontSize="30"
                                   Height="60"
                                   Width="125"
                                   Content="Playlists"
                                   Click="PlayListHeader_Click"
                        />
                        <Button Name="AddPlayListButton"
                                    RelativePanel.RightOf="PlayListHeader"
                                    Content="&#xE109;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="AddPlayListButton_Click"
                                    Height="60"
                                    Width="60"
                                    BorderBrush="Black" 
                        />
                        
                    </StackPanel>
                </ListView>
            </SplitView.Pane>
            
            <SplitView.Content>
                <StackPanel>

                <ListView Name="AllSongsListView" 
                          IsItemClickEnabled="True"
                          ItemClick="AllSongsListView_ItemClick"
                          ItemsSource="{x:Bind SongList}"
                          >
                    <MediaElement Name ="MyMediaElement" AutoPlay="True" />

                    <ListView.ItemTemplate>
                        
                        <DataTemplate x:DataType="model:EachSongLine">
                            <RelativePanel>
                                <TextBlock Name="SongTrack"
                                   Text="{x:Bind SongTitle}"
                                   Width="800"
                                   FontSize="20" 
                                   RelativePanel.AlignLeftWithPanel="True"
                                />
                               
                                <Button Name ="PlayButton"
                                    RelativePanel.RightOf="SongTrack"
                                    Content="&#xE102;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="PlayButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"
                                 />
                                <Button Name ="AddButton"
                                    RelativePanel.RightOf="PlayButton"
                                    Content="&#xE109;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="AddButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"    
                                />

                            </RelativePanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                    <ListView Name="PlayListView" 
                          IsItemClickEnabled="True"
                          ItemClick="AllSongsListView_ItemClick"
                          ItemsSource="{x:Bind playLists}"
                          >
                        <MediaElement Name ="MyMediaElement2" AutoPlay="True" />

                        <ListView.ItemTemplate>

                            <DataTemplate x:DataType="model:EachPlayList">
                                <RelativePanel>
                                    <TextBlock Name="SongTrack"
                                   Text="{x:Bind Name}"
                                   Width="800"
                                   FontSize="20" 
                                   RelativePanel.AlignLeftWithPanel="True"
                                />

                                    <Button Name ="PlayButton"
                                    RelativePanel.RightOf="SongTrack"
                                    Content="&#xE102;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="PlayButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"
                                 />
                                    <Button Name ="AddButton"
                                    RelativePanel.RightOf="PlayButton"
                                    Content="&#xE109;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Click="AddButton_Click"
                                    Height="50"
                                    Width="50"
                                    BorderBrush="Black"    
                                />

                                </RelativePanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                 
                </StackPanel>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>
